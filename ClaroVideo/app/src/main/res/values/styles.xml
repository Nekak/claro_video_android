<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.TitleDescriptionMovie">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_title</item>
    </style>

    <style name="AppTheme.SubtitleDescriptionMovie">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/size_subtitle</item>
    </style>

    <style name="AppTheme.ContentDescriptionMovie">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_content</item>
    </style>

</resources>
